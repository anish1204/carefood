datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  password      String
  city          String
  phoneNumber   String @unique
  funFood       String
}

model Tokens {
  id      String    @id @default(auto()) @map("_id") @db.ObjectId
  token   String
  email   String @unique
  currentTime DateTime
  expirationTime DateTime
}
